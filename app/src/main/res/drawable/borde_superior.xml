        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/grey" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item
        android:top="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list>
