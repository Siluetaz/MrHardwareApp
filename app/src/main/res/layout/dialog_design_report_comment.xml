<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorNaranjo"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name"
                android:padding="3dp"
                android:src="@drawable/iconcircle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:padding="5dp"
                android:text="Elige el motivo de tu reporte"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <RadioGroup
                android:id="@+id/tipoReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/inapropiado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inapropiado" />

                <RadioButton
                    android:id="@+id/ofensivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ofensivo" />

                <RadioButton
                    android:id="@+id/spam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spam" />

                <RadioButton
                    android:id="@+id/otro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otro" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>