<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mrhardwareapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_circle"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_circle_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MrHardwareAPP"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Splash"
            android:exported="true"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductoActivity"
            android:exported="false"
            android:theme="@style/colorBarraSuperiorProducto" />
        <activity
            android:name=".PerfilActivity"
            android:exported="false"
            android:theme="@style/colorBarraSuperiorPerfil" />
        <activity
            android:name=".InicioClienteActivity"
            android:exported="true"
            android:theme="@style/colorBarraSuperiorInicio"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".RegistrarseActivity"
            android:exported="false"
            android:theme="@style/colorBarraSuperior" />
        <activity
            android:name=".AdministrarActivity"
            android:exported="false"
            android:theme="@style/colorBarraSuperiorAdmin"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/colorBarraSuperior" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>